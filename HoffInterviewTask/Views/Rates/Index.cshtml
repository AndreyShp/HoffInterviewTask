@{
    ViewData["Title"] = "Hoff currency rate";
}

<div class="text-left">
    <h1 class="display-4">Hoff currency rate</h1>
    <p>Введите координаты для определения курса валюты</p>
    
    <form>
        <div class="form-group col-sm-3">
            <label for="xCoord">Координата X</label>
            <input id="xCoord" class="form-control" type="text" placeholder="x">
        </div>

        <div class="form-group col-sm-3">
            <label for="yCoord">Координата Y</label>
            <input id="yCoord" class="form-control" type="text" placeholder="y">
        </div>

        <button id="btnRate" type="button" class="btn btn-success">Получить курс</button>
        
        <div id="message" class="mt-3 invisible alert alert-success" role="alert"></div>
    </form>
</div>
